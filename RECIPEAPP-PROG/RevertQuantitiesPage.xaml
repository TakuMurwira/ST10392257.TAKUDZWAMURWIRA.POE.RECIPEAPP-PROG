<Page x:Class="RECIPEAPP_PROG.RevertQuantitiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RECIPEAPP_PROG"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RevertQuantitiesPage">

    <Grid Background="#FF0F1F46">
        <Label Content="Revert Quantities" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FFE1F4DB" FontSize="24" FontFamily="Cascadia Code" FontWeight="Bold" Margin="325,-40,0,0" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="RecipeSelector" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,60,0,0" Width="300"/>
        <Button Content="Revert" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,120,0,0" Width="100" Click="RevertButton_Click"/>
    </Grid>
</Page>

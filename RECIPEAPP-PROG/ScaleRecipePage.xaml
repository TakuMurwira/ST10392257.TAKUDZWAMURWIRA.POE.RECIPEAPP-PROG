<Page x:Class="RECIPEAPP_PROG.ScaleRecipePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RECIPEAPP_PROG"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ScaleRecipePage">

    <Grid Background="#FF0F1F46">
        <Label Content="Scale Recipe" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FFE1F4DB" FontSize="24" FontFamily="Cascadia Code" FontWeight="Bold" Margin="325,-40,0,0" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="RecipeSelector" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,60,0,0" Width="300"/>
        <ComboBox x:Name="ScaleFactorSelector" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="400,60,0,0" Width="300">
            <ComboBoxItem Content="0.5"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
        </ComboBox>
        <Button Content="Scale" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,120,0,0" Width="100" Click="ScaleButton_Click"/>
    </Grid>
</Page>
